<?xml version="1.0" encoding="utf-8" ?>
<page:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:page="clr-namespace:NDEF.MAUI.Views"
             xmlns:vm="clr-namespace:NDEF.MAUI.ViewModels"
             x:DataType="vm:MainViewModel"
             BackgroundColor="White"
             x:Class="NDEF.MAUI.MainPage">
    <ContentPage.Content>
        <VerticalStackLayout VerticalOptions="Center">
            <StackLayout
                Margin="10"
                Padding="1">
               <ActivityIndicator
                   Color="Blue"
                   IsRunning="{Binding ShowIndicator}"
                   IsVisible="{Binding ShowIndicator}"/>
            </StackLayout>
            <Button Margin="15,0,15,0"
                    Command="{Binding StartNfcTransmissionCommand}"
                    BackgroundColor="Blue"
                    TextColor="White"
                    Text="Read"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</page:BaseContentPage>
