<?xml version="1.0" encoding="utf-8" ?>
<page:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:page="clr-namespace:NDEF.MAUI.Views"
             xmlns:vm="clr-namespace:NDEF.MAUI.ViewModels"
             x:DataType="vm:MainViewModel"
             BackgroundColor="White"
             x:Class="NDEF.MAUI.MainPage">
    <ContentPage.Content>
        <VerticalStackLayout VerticalOptions="Center">
            <StackLayout
                Margin="10"
                Padding="1"
                BackgroundColor="LightGray">
                <Editor
                    TextColor="Black"
                    AutoSize="TextChanges"
                    HeightRequest="250"
                    BackgroundColor="White"
                    Placeholder="Write something you would like to share..."
                    MaxLength="250"/>
            </StackLayout>
            <Button Margin="15,0,15,0"
                    Command="{Binding StartNfcTransmissionCommand}"
                    BackgroundColor="Blue"
                    TextColor="White"
                    Text="Send Text"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</page:BaseContentPage>
